<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://fonts.googleapis.com/css?family=Acme&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">
        <title>{% block title %}Biblio{% endblock %}</title>
        {% block stylesheets %} {% endblock %}
    </head>
    <body>

    {# Header #}
    <nav class="navbar navbar-expand-lg navbar-light sticky-top header">
        <a class="navbar-brand text-light logo-biblio" href="http://mpapws.loc:9999/"><img src="/img/logo-biblio.svg" style="width: 80px;"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>



        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% for typeGenre in typesGenre %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ typeGenre }}
                    </a>
                    <div class="dropdown-menu header-sousmenu" aria-labelledby="navbarDropdown" >
                        {% for typeSousGenre in typesSousGenre %}
                        <a class="dropdown-item text-light" href="{{ path('listeBDSousGenre', {'genre' : typeGenre, 'sousGenre' : typeSousGenre, 'page' : '1', 'tri': 'def' }) }}" >{{ typeSousGenre }}</a>
                        {% endfor %}S
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-light" href="{{ path('listeBDTendances', {'genre' : typeGenre, 'page' : '1' }) }}">Les tendances </a>
                        <a class="dropdown-item text-light" href="{{ path('listeBDGenre', {'genre' : typeGenre, 'page' : '1', 'tri': 'def' }) }}">Voir tout </a>
                    </div>
                </li>
                {% endfor %}

            </ul>

            <button type="button" class="btn btn-light" style="margin-right: 30px;" onclick="location.href='http://mpapws.loc:9999/formulaire'"><p class="bd-ajouter">Ajouter votre BD</p></button>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Cherchez une BD" aria-label="Search">
                <button id="search-button" class="btn btn-outline-light my-2 my-sm-0" type="submit"> <img id="search-icon" src="/img/search.png"></button>
            </form>
        </div>
    </nav>


    <div class="container">

        {% block body %}
        {% endblock %}

        {# Ajout d'une zone de pagination pour les pages si besoin est#}
        {# 3 Types de redirection selon si c'est une liste Tendance, Sous-Genre ou Genre #}
    {% if pagination.nbPages is defined and pagination.nbPages > 1 and (( BandeDessinees is defined and BandeDessinees is not empty ) or ( BDTendances is defined and BDTendances is not empty )) %}
        {% if 'Tendances' in GenreToString %}
            <ul class="pagination justify-content-center">
                {% if pagination.page > 1 %}
                    <li>
                        <a href="{{ path(pagination.nomRoute,
                            pagination.paramsRoute|merge({'page': pagination.page-1, 'genre': genre, 'tri': tri })) }}" class="pagination-part pagination-arrow">
                            <img src="/img/back_pagination.png" alt="flèche retour">
                        </a>
                    </li>
                {% endif %}

                {# Affichage de toutes les pages entre p-4 et p+4 sauf si < 1 ou > nbPages #}
                {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}
                    <li {% if p == pagination.page %}class="pagination-active"{% endif %}>
                        <a href="{{ path(pagination.nomRoute, pagination.paramsRoute|merge({'page': p, 'genre': genre})) }}" class="pagination-part">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {% if pagination.page < pagination.nbPages %}
                    <li>
                        <a href="{{ path(pagination.nomRoute,
                            pagination.paramsRoute|merge({'page': pagination.page+1, 'genre': genre, 'tri': tri  })) }}" class="pagination-part pagination-arrow">
                            <img src="/img/next_pagination.png" alt="flèche suivant">
                        </a>
                    </li>
                {% endif %}
            </ul>

        {% elseif sousGenre is defined %}
            <ul class="pagination justify-content-center">
                {% if pagination.page > 1 %}
                    <li>
                        <a href="{{ path(pagination.nomRoute,
                            pagination.paramsRoute|merge({'page': pagination.page-1, 'genre': genre, 'sousGenre' : sousGenre, 'tri': tri })) }}" class="pagination-part pagination-arrow">
                            <img src="/img/back_pagination.png" alt="flèche retour">
                        </a>
                    </li>
                {% endif %}

                {# Affichage de toutes les pages entre p-4 et p+4 sauf si < 1 ou > nbPages #}
                {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}
                    <li {% if p == pagination.page %}class="pagination-active"{% endif %}>
                        <a href="{{ path(pagination.nomRoute, pagination.paramsRoute|merge({'page': p, 'genre': genre, 'sousGenre' : sousGenre, 'tri': tri})) }}" class="pagination-part">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {% if pagination.page < pagination.nbPages %}
                    <li>
                        <a href="{{ path(pagination.nomRoute,
                            pagination.paramsRoute|merge({'page': pagination.page+1, 'genre': genre, 'sousGenre' : sousGenre, 'tri': tri })) }}" class="pagination-part pagination-arrow">
                            <img src="/img/next_pagination.png" alt="flèche suivant">
                        </a>
                    </li>
                {% endif %}
            </ul>
        {% elseif GenreToString is defined %}
            <ul class="pagination justify-content-center">
                {% if pagination.page > 1 %}
                    <li>
                        <a href="{{ path(pagination.nomRoute,
                            pagination.paramsRoute|merge({'page': pagination.page-1, 'genre': GenreToString })) }}" class="pagination-part pagination-arrow">
                            <img src="/img/back_pagination.png" alt="flèche retour">
                        </a>
                    </li>
                {% endif %}

                {# Affichage de toutes les pages entre p-4 et p+4 sauf si < 1 ou > nbPages #}
                {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}
                    <li {% if p == pagination.page %}class="pagination-active"{% endif %}>
                        <a href="{{ path(pagination.nomRoute, pagination.paramsRoute|merge({'page': p, 'genre': GenreToString, 'tri': tri})) }}" class="pagination-part">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {% if pagination.page < pagination.nbPages %}
                    <li>
                        <a href="{{ path(pagination.nomRoute,
                            pagination.paramsRoute|merge({'page': pagination.page+1, 'genre': GenreToString, 'tri': tri })) }}" class="pagination-part pagination-arrow">
                            <img src="/img/next_pagination.png" alt="flèche suivant">
                        </a>
                    </li>
                {% endif %}
            </ul>
        {% endif %}

    {% endif %}

    </div>

    </br> </br> </br> </br>

    {# Footer #}
    <footer id="sticky-footer" class="py-4 text-white-50">
        <div class="container text-center">
            <small>Biblio - Le site qui vous donnera envie de BD !</small>
        </div>
    </footer>

    {% block javascripts %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>
