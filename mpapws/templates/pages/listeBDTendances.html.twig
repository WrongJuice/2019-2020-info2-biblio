{%  extends 'base.html.twig' %}

{% block body  %}



        <h2 class="home-title"> Toutes les tendances</h2>

        <div class="row tendance-zone">
            {% for  BDTendance in BDTendances%}
                <li class="media my-4">
                    <a href="/BD/{{ BDTendance.getId() }}"> <img src="{{ BDTendance.getAffiche() }}" class="mr-3" style="height: 200px" alt="affiche_test.jpg"> </a>
                    <div class="media-body">
                        <a href="/BD/{{ BDTendance.getId() }}" class="BDlist-link"><h5 class="mt-0 mb-1">{{ BDTendance.getTitre() }}</h5></a>
                        <p class="font-weight-bold">{{ BDTendance.getDateDeParution()|date("m/d/Y") }}</p>
                        <p>{{ BDTendance.getDescription() }}</p>
                    </div>
                </li>
            {% endfor %}
        </div>

    {% if BDTendances == NULL %}
        <div class="row justify-content-between align-items-center" style="width: 600px;">
            <img src="/img/noresult.png" style="width: 200px;">
            <div class=column">
                <h1 class="noresult-title"> OOPS ! </h1>
                <h3> Aucun résultat trouvé</h3>
            </div>
        </div>
        <br/>
        <button type="button" class="btn button-download" onclick="window.location.href='http://mpapws.loc:9999/'"> Retour à la page d'accueil</button>
    {% endif %}

{% endblock %}